<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="add"
    tools:context=".ui.calender.CalenderFragment">

    <!-- topLayout -->
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <!-- month_btn -->
        <Button
            android:id="@+id/Month_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="month"
            android:textColor="#BDC0BA" />

        <!-- Diary_btn -->
        <Button
            android:id="@+id/Diary_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:text="DIARY"
            android:textColor="#000000"
            android:textSize="16sp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="ADD TASK"
            android:textColor="#BDC0BA" />

    </LinearLayout>

    <!-- prevMonthButton, dynamic_text_tv, nextMonthButton -->
    <LinearLayout
        android:id="@+id/year_mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <!-- prevMonthButton -->
        <Button
            android:id="@+id/prevMonthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="&lt;"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- dynamic_text_tv -->
        <TextView
            android:id="@+id/dynamic_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YYYY.MM"
            android:textSize="20sp" />

        <!-- nextMonthButton -->
        <Button
            android:id="@+id/nextMonthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="&gt;"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- calendar_container -->
    <GridLayout
        android:id="@+id/calendar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="7"
        app:layout_constraintTop_toBottomOf="@+id/year_mm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/schedule_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/calendar_container">

        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8DB84"
            android:text="일정"
            android:textSize="25dp"/>

        <ScrollView
            android:id="@+id/text_Schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/schedule_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/todo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/schedule_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8DB84"
            android:text="ToDo"
            android:textSize="25dp"/>

        <ScrollView
            android:id="@+id/text_Todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/todo_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tasklayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.widget.Button
            android:id="@+id/plus_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="추가"
            android:textColor="#000000"
            android:background="@color/yellow"
            android:textStyle="bold"
            android:visibility="gone"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="480dp" />

        <android.widget.Button
            android:id="@+id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="수정"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="480dp" />

        <android.widget.Button
            android:id="@+id/check_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:text="조회"
            android:textColor="#000000"
            android:textStyle="bold"
            android:visibility="gone"
            tools:layout_editor_absoluteX="291dp"
            tools:layout_editor_absoluteY="480dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
