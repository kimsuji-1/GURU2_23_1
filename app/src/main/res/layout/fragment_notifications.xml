<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".ui.notifications.NotificationsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="40dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/rounded_corner"
            app:title="하루 작성"
            app:titleTextColor="@color/white">

        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/text_mochi"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@id/custom_toolbar"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/mocchixml"
            android:gravity=""
            android:paddingBottom="5dp"
            android:text="웃모찌에게 하루를 알려줘!"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/button_meal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/text_mochi"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/mealxml"
            android:gravity="clip_horizontal"
            android:onClick="onMealClick"
            android:paddingLeft="10dp"
            android:paddingBottom="60dp"
            android:text="식사"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/meal_info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@id/button_todo"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:gravity=""
            android:text="오늘은 어떤 맛있는 음식을 먹었어?"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/button_todo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/button_meal"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/schedulexml"
            android:gravity="clip_horizontal"
            android:onClick="onScheduleClick"
            android:paddingLeft="10dp"
            android:paddingBottom="60dp"
            android:text="To Do / 일정"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_mood"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/button_todo"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/moodxml"
            android:gravity="clip_horizontal"
            android:onClick="onMoodClick"
            android:paddingLeft="10dp"
            android:paddingBottom="60dp"
            android:text="기분 / 한줄 일기"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

