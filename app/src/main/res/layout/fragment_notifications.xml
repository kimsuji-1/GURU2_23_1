<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/text_mochi"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/mocchixml"
            android:gravity=""
            android:paddingBottom="5dp"
            android:text="웃모찌에게 하루를 알려줘!"
            android:textSize="20sp"
            android:textStyle="bold" />


        <android.widget.Button
            android:id="@+id/button_meal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/text_mochi"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/mealxml"
            android:gravity="clip_horizontal"
            android:onClick="onMealClick"
            android:paddingLeft="15dp"
            android:paddingBottom="60dp"
            android:text="식사"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:textColor="#FAF9F9"/>


        <android.widget.Button
            android:id="@+id/button_todo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/button_meal"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/schedulexml"
            android:gravity="clip_horizontal"
            android:onClick="onScheduleClick"
            android:paddingLeft="10dp"
            android:paddingBottom="60dp"
            android:text="To Do / 일정"
            android:textSize="25sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/button_mood"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/button_todo"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/moodxml"
            android:gravity="clip_horizontal"
            android:onClick="onMoodClick"
            android:paddingLeft="10dp"
            android:paddingBottom="60dp"
            android:text="기분 / 한줄 일기"
            tools:textColor="#FAF9F9"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

